{
  "extends": "@stellar/tsconfig",
  "compilerOptions": {
    "baseUrl": "src/",
    "outDir": "./build/",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    // "noEmit": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    // "emitDeclarationOnly": true,
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "build"]
}
